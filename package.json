{
  "scripts": {
    "install": "cd api && yarn",
    "start": "cd api && yarn start",
    "debug": "cd api && yarn debug",
    "format": "prettier --write \"api/**/*.js\" \"api/**/*.ts\""
  },
  "dependencies": {
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "devDependencies": {
    "pretty-quick": "^3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
