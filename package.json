{
  "name": "bookweb",
  "version": "1.0.0",
  "description": "Bookweb",
  "scripts": {
    "install": "(cd api && yarn) & (cd client && yarn)",
    "start": "cd api && yarn start --optimize_for_size --max_old_space_size=460",
    "heroku-postbuild": "cd client && yarn build --optimize_for_size --max_old_space_size=460",
    "format": "prettier --write",
    "chromatic": "cd client && yarn chromatic"
  },
  "author": "THE BEST",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {}
}
